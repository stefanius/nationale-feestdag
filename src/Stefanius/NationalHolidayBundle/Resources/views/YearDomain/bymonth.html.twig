{% extends "StefaniusNationalHolidayBundle::freelayout.html.twig" %}

{% block htmlbody %}

    <div class="container mtb">
        <div class="row">
            <div class="col-md-12">
                <ul class="list-inline list-unstyled">
                    {% for month in months %}
                        <li class="col-md-1"><a style="display: block;" href="/{{ month }}" title="{{ month }} {{ page.domainYear }}">{{ month }}</a></li>
                    {% endfor %}
                </ul>
            </div>
        </div>

        <div class="row">
            <div class="col-md-12">
           {% include 'StefaniusNationalHolidayBundle:YearOverides:Month/overides.html.twig' %}

           <p>De maand {{ dutchMonthName }} is de {{ monthNumber }}e maand van {{ page.domainYear }}. Deze maand behoort tot het {{ (monthNumber // 4) + 1 }}e kwartaal van {{ page.domainYear }}.</p>

            </div>
            </div>
    </div>

    <div class="container mtb">
        <div class="row">

            <div class="col-md-12">


            {% include 'StefaniusNationalHolidayBundle:GoogleAdsense:728x90.html.twig' with {'pubid': 'ca-pub-1143505562670221', 'slotid': '4350506819'} %}

            <h2>Overzicht {{ dutchMonthName }} {{ page.domainYear }}</h2>
            <table class="table table-striped table-hover">

                {% for date in dates %}
                    <tr>
                        {% if date.bankHoliday %}
                            <td><strong>{{ date.description|e }} {{ date.startdate|date("Y") }}</strong></td>
                        {% else %}
                            <td>{{ date.description|e }} {{ date.startdate|date("Y") }}</td>
                        {% endif %}

                        <td>{{ date.startdate|localize('%A %d %B %Y')|capitalize }}</td>

                        <td>Week {{ date.startdate|localize('%V') }}</td>
                    </tr>
                {% endfor %}
            </table>

            {% include 'StefaniusNationalHolidayBundle:GoogleAdsense:728x90.html.twig' with {'pubid': 'ca-pub-1143505562670221', 'slotid': '4350506819'} %}

                </div>
        </div> <! --/row -->
    </div><! --/container -->

{% endblock %}